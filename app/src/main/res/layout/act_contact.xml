<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:background="@color/colortheme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/ten"
            android:singleLine="true"
            android:src="@drawable/ico_left" />

        <View
            android:id="@+id/img_view3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="@dimen/five"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/heading"
            style="@style/textviewstyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/ten"
            android:text="Contact"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_companyname"
        android:layout_below="@+id/lay_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty"
                android:orientation="vertical"
                android:padding="@dimen/two">

                <ImageView
                    android:id="@+id/img_selectimage"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    style="@style/textviewstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sixty"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/twentyfive"
                    android:layout_marginRight="@dimen/twentyfive"
                    android:gravity="center_vertical"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_contactdetil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_logo"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/five"
                android:orientation="vertical"
                android:padding="@dimen/ten">

                <RelativeLayout
                    android:id="@+id/lay_emailaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/emailicon" />

                    <TextView
                        android:id="@+id/txt_emailaddress"
                        style="@style/textviewstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_toRightOf="@+id/img_email"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_fifteen" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay_contactnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_contact"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/phoneicondark" />

                    <TextView
                        android:id="@+id/txt_contactnumber"
                        style="@style/textviewstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_toRightOf="@+id/img_contact"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_fifteen" />
                </RelativeLayout>

                <TextView
                    style="@style/textviewstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:singleLine="true"
                    android:text="Follow at : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_fifteen"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/ten">

                        <ImageView
                            android:layout_width="@dimen/forty"
                            android:layout_height="@dimen/forty"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/facebook_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/three"
                        android:orientation="vertical"
                        android:padding="@dimen/ten">

                        <ImageView
                            android:layout_width="@dimen/forty"
                            android:layout_height="@dimen/forty"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/instagram_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/three"
                        android:orientation="vertical"
                        android:padding="@dimen/ten">

                        <ImageView
                            android:layout_width="@dimen/forty"
                            android:layout_height="@dimen/forty"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/whatsapp_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_hike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/three"
                        android:orientation="vertical"
                        android:padding="@dimen/ten">

                        <ImageView
                            android:layout_width="@dimen/forty"
                            android:layout_height="@dimen/forty"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/hike_icon" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>