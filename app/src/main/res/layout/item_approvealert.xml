<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:padding="@dimen/two">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_xmedium"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/lay_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_3"
            android:orientation="vertical"
            android:padding="@dimen/five">

            <TextView
                android:id="@+id/alert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/grey_80"
                android:textSize="@dimen/ts_twenty"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alert_sanchaarid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SanchaarId"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/grey_80"
                android:textSize="@dimen/ts_seventeen" />

            <TextView
                android:id="@+id/alert_labname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/grey_80"
                android:textSize="@dimen/ts_seventeen" />

            <TextView
                android:id="@+id/alert_reportnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Number"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/grey_80"
                android:textSize="@dimen/ts_seventeen" />

            <TextView
                android:id="@+id/alert_contactnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/grey_80"
                android:textSize="@dimen/ts_seventeen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_3"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:text="@string/btn_reject"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:text="@string/btn_accept"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lyt_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_3"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:text="jhgfddhj" />

    </LinearLayout>

</LinearLayout>