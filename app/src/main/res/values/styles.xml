<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textviewstyle">
        <item name="android:background">@drawable/textviewstyle</item>
        <item name="android:padding">@dimen/three</item>
        <item name="android:textColor">@color/fontcolortextview</item>
        <item name="android:textSize">@dimen/ts_forteen</item>
    </style>

    <style name="textviewstylebold">
        <item name="android:background">@drawable/textviewstyle</item>
        <item name="android:padding">@dimen/three</item>
        <item name="android:textColor">@color/fontcolortextview</item>
        <item name="android:textSize">@dimen/ts_fifteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edittextstyle">
        <item name="android:background">@drawable/edittextstyle</item>
        <item name="android:paddingLeft">@dimen/five</item>
        <item name="android:paddingTop">@dimen/three</item>
        <item name="android:paddingRight">@dimen/five</item>
        <item name="android:paddingBottom">@dimen/three</item>
        <item name="android:height">@dimen/editextheight</item>
        <item name="android:textColor">@color/fontcoloreditext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="buttonstyle">
        <item name="android:background">@drawable/buttonback</item>
        <item name="android:textSize">@dimen/ts_forteen</item>
        <item name="android:padding">@dimen/three</item>
        <item name="android:height">@dimen/buttonheight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/fontcolorbutton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Green" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/green_500</item>
        <item name="colorControlHighlight">@color/green_500</item>
        <item name="colorControlNormal">@color/green_400</item>
    </style>
</resources>
